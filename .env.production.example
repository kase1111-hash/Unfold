# Unfold Production Environment Variables
# Copy this file to .env.production and fill in SECURE values

# =============================================
# IMPORTANT: Change ALL default values below
# =============================================

# PostgreSQL Database
POSTGRES_USER=unfold
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
POSTGRES_DB=unfold

# Neo4j Graph Database
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# JWT Authentication
# Generate with: openssl rand -hex 64
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_RANDOM_STRING

# Frontend API URL (your domain)
NEXT_PUBLIC_API_URL=https://api.unfold.example.com

# CORS Origins (your domain)
CORS_ORIGINS=https://unfold.example.com,https://www.unfold.example.com

# AI Services (optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# External APIs (optional)
CROSSREF_EMAIL=admin@unfold.example.com
SEMANTIC_SCHOLAR_API_KEY=

# Analytics (optional)
POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com
